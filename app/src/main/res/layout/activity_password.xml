<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoRed"
    tools:context=".activities.PasswordActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="请验证指纹或输入二级密码"/>

    <com.example.accountmanager.ui.CircleView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_title"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/tv_1"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="1"/>

        <TextView
            android:id="@+id/tv_2"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="2"/>

        <TextView
            android:id="@+id/tv_3"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="3"/>

        <TextView
            android:id="@+id/tv_4"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="4"/>

        <TextView
            android:id="@+id/tv_5"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="5"/>

        <TextView
            android:id="@+id/tv_6"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="6"/>

        <TextView
            android:id="@+id/tv_7"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="7"/>

        <TextView
            android:id="@+id/tv_8"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="8"/>

        <TextView
            android:id="@+id/tv_9"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_marginBottom="10dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="9"/>

        <ImageView
            android:id="@+id/iv_finger"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="18dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:src="@drawable/finger"/>

        <TextView
            android:id="@+id/tv_0"
            android:width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginEnd="20dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="0"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="4"
            android:layout_column="3"
            android:padding="18dp"
            android:background="@drawable/selector_pwd"
            android:clickable="true"
            android:src="@drawable/delete"/>

    </GridLayout>

</RelativeLayout>